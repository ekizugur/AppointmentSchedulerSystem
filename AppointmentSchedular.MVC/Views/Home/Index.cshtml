
@model List<AppointmentDto>
<div class="container-xxl flex-grow-1 container-p-y">


    <h4 class="fw-bold py-3 mb-4">
        <span class="text-muted fw-light">Appointment Manage /</span> Appointments
    </h4>

    <!-- Basic Bootstrap Table -->
    <div class="card">
        <div class="table-responsive text-nowrap m-3">
            <a class="btn btn-success mb-3" asp-controller="Home" asp-action="AddAppointment">Appointment Add <i class="bx bx-plus"></i> </a>

            <table class="table table-bordered" id="appointmentsTable" width="100%" cellspacing="0">
                <thead>
                    
                    <tr>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Appointment Date</th>
                        <th>Appointment Description</th>
                        <th>Transactions</th>
                    </tr>
                </thead>

                <tfoot>
                    <tr>
                        <th>Created Date</th>
                        <th>Created By</th>
                        <th>Appointment Date</th>
                        <th>Appointment Description</th>
                        <th>Transactions</th>
                    </tr>
                </tfoot>
                <tbody class="table-border-bottom-0">
                    @foreach (var appointment in Model)
                    {
                        <tr name="@appointment.Id">
                            <td>@appointment.CreatedDate</td>
                            <td>@appointment.CreatedBy</td>
                            <td>@appointment.AppointmentDate.DateTime</td>
                            <td>@appointment.Name</td>                            
                            <td>
                                <a class="btn btn-primary mb-3 btn-sm" data-id="@appointment.Id" asp-controller="Home" asp-action="UpdateAppointment" asp-route-appointmentId="@appointment.Id"><i class="bx bxs-edit"></i></a>
                                <a class="btn btn-danger mb-3 btn-sm" data-id="@appointment.Id" asp-controller="Home" asp-action="DeleteAppointment" asp-route-appointmentId="@appointment.Id"><i class="bx bx-minus-circle"></i></a>
                           </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>




@section Scripts{
     <script src="~/js/appointmentIndex.js" type="application/ecmascript"></script>
}

